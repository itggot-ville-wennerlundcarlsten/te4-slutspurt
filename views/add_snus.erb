    <% brands.each do |row| %>
    <option value='<%= row['brand_id'] %>'><%= row['brand_name'] %></option>
    <% end %>
    </select>    
    <br>
    <input type="file" name="file">
    <br>
    <input type="submit" value="Upload new snus">
